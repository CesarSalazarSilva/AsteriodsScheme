;#############################################################################################################ZONA PRUEBAS

(define sp1 (list (list 20 30 4 5 8 3 (create_tablero_vacio 20 30 )) (list (create_nave  "space" 10 1 6 888 1 90) (list   (list "Hola" 1 1 180 1 2 33 ) 1 1 180 1 2 33) (list 2 "disparos")) ))

(define A (create_Asteroide  sp1 5 4 0 1 2 134 ) )

(define D (create_disparo "Hola" 1 2 3 4 5 6 7 8))

(define Asteroides (list (list  "hola" 3 2 180 1 2 33) (list  "hola" 6 5 180 1 2 33) (list  "hola" 1 7 180 1 1 33) ))
