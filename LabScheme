           )
      (create_disparo   (Selector_space_disparo disparo)
                        (Selector_px_disparo disparo)
                        nuevopy
                        (Selector_angulo_disparo disparo)
                        (Selector_velocidad_disparo disparo)
                        (Selector_pxf_disparo disparo)
                        (Selector_pyf_disparo disparo)
                        (Selector_largo_disparo disparo)
                        (Selector_seed_disparo disparo)
                        )
      disparo
      )
  )

